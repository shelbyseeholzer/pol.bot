                  <span class="sr-only">Open main menu</span>
                  <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                  </svg>
                </button>
              </div>
            </div>
            <div class="hidden space-x-8 md:ml-10 md:flex">
              <a href="<%= root_path %>" class="text-base font-medium text-stone-700 hover:text-stone-600" data-method="post"></a>
              <!-- <a href="<%= pricing_path %>" class="text-base font-medium text-stone-700 hover:text-stone-600" data-method="post">Pricing</a> -->
            </div>
          </div>
          <div class="hidden md:flex md:items-center md:space-x-6">
            <span class="inline-flex items-center border border-transparent bg-white px-4 py-2 text-base font-medium text-stone-700 hover:bg-stone-400"></a>
            <div data-controller="hashconnect"
                              data-hashconnect-app-name-value="pol.bot"
                              data-hashconnect-app-description-value="Proof of Location"
                              <%# data-hashconnect-app-icon-value="Image URL" %>
                              data-hashconnect-app-url-value="https://pol.bot"
                              data-hashconnect-project-id-value="1d96abff8024054077a76052af91b46d">
              <button data-action="click->hashconnect#initHashConnect">
                Connect Wallet
              </button>
            </div>
          </div>
        </nav>
      </div>
    </header>
    <%= yield %>
