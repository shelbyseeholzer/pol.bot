<div class="flow-root">
  <ul role="list" class="-mb-8">
    <li>
      <div class="relative mt-8 pb-8 pr-12">
        <span class="absolute left-5 top-5 -ml-px h-full w-0.5 bg-stone-200" aria-hidden="true"></span>
        <div class="relative flex items-start space-x-3">
          <div class="relative">
            <!-- addd Photo link -->
            <img class="flex h-10 w-10 items-center justify-center rounded-full bg-stone-400 ring-8 ring-stone-50" src= <%#photo %>  alt="">
            <span class="absolute -bottom-0.5 -right-1 rounded-tl bg-stone-50 px-0.5 py-px">
            </span>
          </div>
          <div class="min-w-0 flex-1">
            <div>
              <div class="text-sm">
                <strong>
                  <a href="#" class="font-medium text-amber-700"><%= comment.commenter %></a>
                </strong>
              </div>
              <p class="mt-0.5 text-sm text-stone-500"><%= comment.created_at.present? comment.created_at.strftime("%B %d, %Y") : "Date not available" %></p>
            </p>
          </div>
          <div class="mt-2 mb-6 text-sm text-stone-700">
            <p><%= comment.body %></p>
          </div>
          <!-- Edit Comment -->
          <%= render 'comments/edit', article: comment.article, comment: comment, class: "inline-flex items-center gap-x-0.5 rounded-md bg-stone-100 px-2 py-2 text-xs font-medium text-stone-500" %>
          <!-- Delete Button  -->
          <div class="absolute top-0 right-0 mt-2 -mr-2 group">
            <%= link_to [comment.article, comment],
             method: :delete,
             data: { turbo_confirm: "Are you sure you want to delete this comment?", turbo_method: :delete }, 
             class: "inline-flex items-center gap-x-0.5 rounded-md bg-stone-100 px-1 py-1 text-xs font-medium text-stone-700" do %>
              <span class="group relative h-3.5 w-3.5 rounded-sm hover:bg-stone-600/20">
                <span class="sr-only">Delete Comment</span>
                <svg viewBox="0 0 14 14" class="h-3.5 w-3.5 stroke-stone-700/50 group-hover:stroke-stone-700/75">
                  <path d="M4 4l6 6m0-6l-6 6" />
                </svg>
              </span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </li>
</ul>
</div>
